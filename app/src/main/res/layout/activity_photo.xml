<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<ImageView
    android:id="@+id/entire_image"
    android:scaleType="fitCenter"
    android:adjustViewBounds="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floating_action_menu"
        app:menu_colorNormal="#FFFFFF"
        app:menu_colorPressed="#FF4500"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu_icon="@drawable/logo_image"
        app:menu_labels_ellipsize="end"
        app:menu_labels_singleLine="true">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/download_image"
            android:src="@drawable/download"
            app:fab_colorNormal="#FFFFFF"
            app:fab_colorPressed="#FF4500"
            app:fab_size="normal"
            app:fab_label="下载"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/love_image"
            android:src="@drawable/love"
            app:fab_colorNormal="#FFFFFF"
            app:fab_colorPressed="#FF4500"
            app:fab_size="normal"
            app:fab_label="收藏"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/use_image_background"
            android:src="@drawable/usebackground"
            app:fab_colorNormal="#FFFFFF"
            app:fab_colorPressed="#FF4500"
            app:fab_size="normal"
            app:fab_label="设置为壁纸"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </com.github.clans.fab.FloatingActionMenu>
</android.support.design.widget.CoordinatorLayout>
